  keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics,cosmology: theory,dark matter,galaxies: halos,galaxies: structure}
}

@article{vandenboschDisruptionDarkMatter2018,
  title = {Disruption of Dark Matter Substructure: Fact or Fiction?},
